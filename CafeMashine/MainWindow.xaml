<Window x:Class="CafeMashine.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CafeMashine"
        mc:Ignorable="d"
        Title="Бухгалтер" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="Автоматы/Ингредиенты">
                <MenuItem Name="EditListMenuItem" Header="Редактировать список" Click="EditListMenuItem_OnClick"/>
                <MenuItem Header="Импорт списка для приложения"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
