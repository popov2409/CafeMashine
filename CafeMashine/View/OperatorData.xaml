<UserControl x:Class="CafeMashine.View.OperatorData"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CafeMashine.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">
    <Grid>
        <DataGrid Name="IngredientCountDataGrid" CanUserAddRows="False" AutoGenerateColumns="False" IsReadOnly="True" HeadersVisibility="Column">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Ингредиент" MinWidth="200" Binding="{Binding Path=Value}"/>
                <DataGridTextColumn Header="Кол-во" Binding="{Binding Path=Count}" FontWeight="Bold"/>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</UserControl>
